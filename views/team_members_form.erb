<h1>Add a member to <%= @team.name() %> </h1>

  <form action="/members" method="post">
    <input id='team_id' name='team_id' type='hidden' value='<%= @team.id() %>'>

    <label for='member_name'>Member's name:</label>
    <input id='member_name' name='member_name' type='text'>

    <label for='role'>Member's role:</label>
    <input id='role' name='role' type='text'>

    <label for='gender'>Member's gender:</label>
    <input id='gender' name='gender' type='text'>

    <button class="btn btn-info"type="submit">Add Member</button>
  </form>
